# Dovecot LDAP Configuration
# Generated by Ansible
# Compatible with Dovecot 2.4.1+
# Included via !include in passdb ldap {} and userdb ldap {} blocks in dovecot.conf
#
# LDAP Server: int-srv (192.168.1.10)
# Base DN:     dc=lksn2025,dc=id

# Dovecot 2.4: use ldap_uris instead of old 'hosts' setting
ldap_uris = ldap://192.168.1.10

# Bind credentials for user lookups
dn = cn=admin,dc=lksn2025,dc=id
dnpass = Skills39!
ldap_version = 3

# Search base
base = ou=People,dc=lksn2025,dc=id
scope = subtree

# Authentication via direct LDAP bind as the user
auth_bind = yes
auth_bind_userdn = uid=%{user},ou=People,dc=lksn2025,dc=id

# User attribute mapping (for userdb lookups)
user_filter = (&(objectClass=posixAccount)(uid=%{user}))
user_attrs = homeDirectory=home,uidNumber=uid,gidNumber=gid
