// Bind9 Options Configuration
// Generated by Ansible

options {
    directory "/var/cache/bind";
    
    // Listen on INT interface
    listen-on { {{ int_ip }}; 127.0.0.1; };
    listen-on-v6 { none; };
    
    // Allow queries from internal networks
    allow-query { 
        localhost;
        192.168.1.0/24;    // INT zone
        172.16.1.0/24;     // DMZ zone
        10.0.0.0/24;       // MGMT zone
        10.10.0.0/24;      // VPN zone
    };
    
    // Forwarders (untuk external DNS)
    forwarders {
        8.8.8.8;
        8.8.4.4;
    };
    
    // DNSSEC validation
    dnssec-validation auto;
    
    // Recursion
    recursion yes;
    allow-recursion { 
        localhost;
        192.168.1.0/24;
        172.16.1.0/24;
        10.0.0.0/24;
        10.10.0.0/24;
    };
};
